@page "/general-setup/Transaction/Transfer"
@inject ITransactionApi TransactionApi
@inject NavigationManager NavigationManager

<EditForm Model="@_model" OnValidSubmit="OnValidSubmit">
    <MudGrid Class="justify-content-center">
        <MudItem xs="12" sm="7">
            <MudText Typo="Typo.h6" Class="mud-width-full">AdminUser Create Form</MudText>
            <MudCard>
                <MudCardContent>
                    <MudTextField Label="FromAccountNo"
                                  @bind-Value="_model.FromAccountNo" For="@(() => _model.FromAccountNo)"/>
                    <MudTextField Label="ToAccountNo"
                                  @bind-Value="_model.ToAccountNo" For="@(() => _model.ToAccountNo)"/>
                    <MudTextField Label="Amount" Class="mt-3"
                                  @bind-Value="_model.Amount" For="@(() => _model.Amount)"/>
                </MudCardContent>
                <MudCardActions>
                    <MudButton ButtonType="ButtonType.Button" Variant="Variant.Filled" Href="/general-setup/transaction" Color="Color.Warning">
                        Cancel
                    </MudButton>
                    <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Class="ml-2">Send</MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
    </MudGrid>
</EditForm>