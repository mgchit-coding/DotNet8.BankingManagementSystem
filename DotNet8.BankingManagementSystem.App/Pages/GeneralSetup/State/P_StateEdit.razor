@page "/general-setup/state/edit/{stateId}"
@inject IStateApi StateApi

<EditForm Model="@_model" OnValidSubmit="OnValidSubmit">
    <MudGrid Class="justify-content-center">
        <MudItem xs="12" sm="7">
            <MudText Typo="Typo.h6" Class="mud-width-full">Edit Information</MudText>
            <MudCard>
                <MudCardContent>
                    <MudTextField Label="StateCode" @bind-Value="_model.Data.StateCode" For="@(() => _model.Data.StateCode)"/>
                    <MudTextField Label="StateName" Class="mt-3" @bind-Value="_model.Data.StateName" For="@(() => _model.Data.StateName)"/>
                </MudCardContent>
                <MudCardActions>
                    <MudButton ButtonType="ButtonType.Button" Variant="Variant.Filled" Href="/general-setup/state" Color="Color.Warning">
                        Cancel
                    </MudButton>
                    <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" @onclick="OnValidSubmit" Class="ml-2">Confirm Update</MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
    </MudGrid>
</EditForm>