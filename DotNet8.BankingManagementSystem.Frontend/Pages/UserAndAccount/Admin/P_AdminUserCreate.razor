@page "/user-and-account/admin-user/create"
@using DotNet8.BankingManagementSystem.Frontend.Api.Features.AdminUser
@inject IAdminUser AdminUserAPI
@inject NavigationManager NavigationManager

<EditForm Model="@_model" OnValidSubmit="OnValidSubmit">
    <MudGrid Class="justify-content-center">
        <MudItem xs="12" sm="7">
            <MudText Typo="Typo.h6" Class="mud-width-full">AdminUser Create Form</MudText>
            <MudCard>
                <MudCardContent>
                    <MudTextField Label="AdminUserCode"
                                  @bind-Value="_model.AdminUserCode" For="@(() => _model.AdminUserCode)"/>
                    <MudTextField Label="AdminUserName" Class="mt-3"
                                  @bind-Value="_model.AdminUserName" For="@(() => _model.AdminUserName)"/>
                    <MudTextField Label="MobileNo" Class="mt-3"
                                  @bind-Value="_model.MobileNo" For="@(() => _model.MobileNo)"/>
                    <MudTextField Label="UserRoleCode" Class="mt-3"
                                  @bind-Value="_model.UserRoleCode" For="@(() => _model.UserRoleCode)"/>
                </MudCardContent>
                <MudCardActions>
                    <MudButton ButtonType="ButtonType.Button" Variant="Variant.Filled" Href="/user-and-account/admin-user" Color="Color.Warning">
                        Cancel
                    </MudButton>
                    <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Class="ml-2">Create AdminUser</MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
    </MudGrid>
</EditForm>