@page "/general-setup/account/edit/{accountNo}"
@inject IAccountApi AccountApi

@if (_model is not null)
{
    <EditForm Model="@_model">
        <MudGrid Class="justify-content-center">
            <MudItem xs="12" sm="7">
                <MudText Typo="Typo.h6" Class="mud-width-full">Edit Information</MudText>
                <MudCard>
                    <MudCardContent>
                        <MudTextField Label="CustomerCode" @bind-Value="_model.CustomerCode" For="@(() => _model.CustomerCode)"/>
                        <MudTextField Label="Balance" Class="mt-3" @bind-Value="_model.Balance" For="@(() => _model.Balance)"/>
                    </MudCardContent>
                    <MudCardActions>
                        <MudButton ButtonType="ButtonType.Button" Variant="Variant.Filled" Href="/general-setup/account" Color="Color.Warning">
                            Cancel
                        </MudButton>
                        <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" @onclick="OnValidSubmit" Class="ml-2">Update</MudButton>
                    </MudCardActions>
                </MudCard>
            </MudItem>
        </MudGrid>
    </EditForm>
}
